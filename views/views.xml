<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_gestion_tareas_form" model="ir.ui.view">
        <field name="name">gestion.tareas.form</field>
        <field name="model">gestion.tareas</field>
        <field name="arch" type="xml">
            <form string="Tarea">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="prioridad"/>
                        <field name="realizada"/>
                        <field name="urgente" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW (Odoo 17 usa <list>, NO <tree>) -->
    <record id="view_gestion_tareas_list" model="ir.ui.view">
        <field name="name">gestion.tareas.list</field>
        <field name="model">gestion.tareas</field>
        <field name="arch" type="xml">
            <list string="Tareas">
                <field name="nombre"/>
                <field name="prioridad"/>
                <field name="realizada"/>
                <field name="urgente"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_gestion_tareas" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">gestion.tareas</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_gestion_tareas_root" name="GestiÃ³n de Tareas"/>
    <menuitem id="menu_gestion_tareas" name="Tareas"
              parent="menu_gestion_tareas_root"
              action="action_gestion_tareas"/>

</odoo>